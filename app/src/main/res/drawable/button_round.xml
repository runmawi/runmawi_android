<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dip" android:color="?attr/background" />
            <gradient android:angle="90" android:startColor="?attr/backgroundColor" android:endColor="?attr/backgroundColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dip" android:color="?attr/backgroundColor" />
            <solid android:color="?attr/backgroundColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dip" android:color="?attr/backgroundColor" />
            <gradient android:angle="-90" android:startColor="?attr/backgroundColor" android:endColor="?attr/backgroundColor" />
        </shape>
    </item>
</selector>