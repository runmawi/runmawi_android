<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:padding="20dp"
    tools:context=".CheckoutActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/backarrow"
        android:layout_margin="0dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="â‚¦0"
        android:textStyle="bold"
        android:id="@+id/amount"
        android:textColor="?attr/textcolor"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="44dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_payment_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Card Details: "
        android:textSize="24dp"
        android:textColor="?attr/textcolor" />
    <EditText
        android:id="@+id/credit_card_number"
        style="@style/paydunya_edittext"
        android:hint="Card Number"
        android:inputType="number"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        style="@style/paydunya_edittext"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/credit_card_expiry"
            style="@style/paydunya_edittext"
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:hint="mm/yy"
            android:inputType="date"
            android:maxLength="5" />

        <EditText
            android:id="@+id/credit_card_ccv"
            style="@style/paydunya_edittext"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:hint="cvv"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="match_parent"
                android:indeterminateOnly="true"
                android:layout_centerInParent="true"
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressTint="@color/colorAccent"
                android:progressBackgroundTint="@color/black_transparent"
                android:progressTintMode="screen"
                android:layout_height="@dimen/size_14"
                tools:targetApi="lollipop"
                android:visibility="gone"
                android:layout_alignParentBottom="true"/>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/pay_button"
                android:text="@string/pay"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>