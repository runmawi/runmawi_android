<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="?attr/backgroundColor"
    tools:context="MobileNumberLoginActivity">

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:text="Watch On!Entertainment at your Desk"
            android:textColor="?attr/textcolor"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:text="Watch TV Anytime,Anywhere"
            android:textColor="?attr/textcolor"
            android:textSize="18dp"
            />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:text="Prime Yourself-Get Ready to Keep eye's on!!!"
            android:textColor="?attr/textcolor"
            android:textSize="18dp"
            />



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/countrycode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/urbanist_bold"
                android:text="+91"
                android:layout_marginRight="5dp"
                android:inputType="text"
                android:textColor="?attr/textcolor"
                android:textColorHint="#848587"
                android:textCursorDrawable="@null" />




            <EditText
                android:id="@+id/mobil11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:background="@drawable/edittextstyle"
                android:textColor="?attr/textcolor"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_gravity="center"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/urbanist_bold"
                android:paddingBottom="10dp"
                android:hint="Mobile"
                android:textColorHint="#848587"
                android:shadowRadius="2"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:background="@drawable/edittextstyle"
                android:textColor="?attr/textcolor"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:inputType="number"
                android:visibility="visible"
                android:layout_gravity="center"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/urbanist_bold"
                android:paddingBottom="10dp"
                android:hint="Mobile"
                android:textColorHint="#848587"
                android:shadowRadius="2"
                android:textSize="20dp"/>


        </LinearLayout>


        <Button
            android:id="@+id/sendotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center|center_horizontal"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="19dp" />


    </LinearLayout>

</LinearLayout>