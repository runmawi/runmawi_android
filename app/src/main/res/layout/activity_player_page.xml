<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="match_parent"
    tools:context=".PlayerPageActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/play_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Play Trailer"
            android:textSize="18dp"
            android:padding="15dp"
            android:drawableLeft="@drawable/play_bottom"
            android:drawablePadding="15dp"
            android:layout_gravity="center"
          />

        <TextView
            android:id="@+id/resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Resume play"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/resme_bottom"
            />

        <TextView
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Start Over"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/start_bottom"
            />


        <TextView
            android:id="@+id/wishlists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Wishlist"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/wishlist_bottom"
            />


        <TextView
            android:visibility="gone"
            android:id="@+id/downloaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Download"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/download_bottom"
            />

        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Remove From Continue watching"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/remove_bottom"
            />
        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="Share"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/share"
            />



        <TextView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:text="View Details"
            android:textSize="18dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/view_bottom"
            />



    </LinearLayout>



</LinearLayout>