<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="match_parent"
    tools:context=".PlayerPageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cross"
                android:padding="5dp"
                android:id="@+id/cross"
                android:layout_gravity="right"
                android:layout_margin="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                            <LinearLayout
                                android:background="#333333"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_launcher_background"/>



                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"

                                >

                                <ImageView
                                    android:id="@+id/queue"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/queuenusic"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />



                            </LinearLayout>

                            <LinearLayout
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"

                                >

                                <ImageView
                                    android:id="@+id/shuffle"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/shuffle"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />

                                <ImageView
                                    android:id="@+id/shufflevisible"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/shufflevisible"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/wishlistlayout"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"

                                >

                                <ImageView
                                    android:id="@+id/wishlist"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/add"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />

                                <ImageView
                                    android:id="@+id/wishlisted"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/added"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/favoritelayout"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"

                                >

                                <ImageView
                                    android:id="@+id/favourite"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_favorite_border_24" />

                                <ImageView
                                    android:id="@+id/favoriteadd"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/ic_baseline_favorite_24"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/first"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/urbanist_bold"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="00:00" />


                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/seekBar"
                            android:layout_weight="0.5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:id="@+id/last"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/urbanist_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:visibility="visible"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Audio_title"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textcolor"
                            android:text="Sample Audio"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/audio_description"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textcolor"
                            android:text="Sample Audio"
                            android:textSize="16dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/equalizer_layout"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/equalizer"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/equalizer"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/previous"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/previous"
                                    android:layout_gravity="center"
                                    android:padding="10dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/pause"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/pause"
                                    android:layout_gravity="center"
                                    android:padding="10dp" />

                                <ImageView
                                    android:id="@+id/play"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/play"
                                    android:layout_gravity="center"
                                    android:padding="10dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/next"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/next"
                                    android:layout_gravity="center"
                                    android:padding="10dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/repeat"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:src="@drawable/repeat"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />

                                <ImageView
                                    android:id="@+id/repeatonce"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/repeat_one_24"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />

                                <ImageView
                                    android:id="@+id/repeatmany"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:src="@drawable/repeat_many"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>