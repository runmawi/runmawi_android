<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color" >

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textSize="25dp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="?attr/textcolor"
            android:textFontWeight="700"
            android:layout_marginStart="16dp"
            android:id="@+id/toolbar_title" />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control"
            android:textSize="25dp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="?attr/textcolor"
            android:textFontWeight="700" />


        <LinearLayout
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security Alerts"
                android:layout_gravity="center"
                android:fontFamily="@font/urbanist_medium"
                android:maxLines="1"
                android:gravity="left"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:textStyle="bold"
                android:textColor="?attr/textcolor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/manage_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Devices"
                android:layout_gravity="center"
                android:fontFamily="@font/urbanist_medium"
                android:maxLines="1"
                android:gravity="left"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:textStyle="bold"
                android:textColor="?attr/textcolor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Permission"
                android:layout_gravity="center"
                android:fontFamily="@font/urbanist_medium"
                android:maxLines="1"
                android:gravity="left"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:textStyle="bold"
                android:textColor="?attr/textcolor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                />

        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textSize="25dp"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="?attr/textcolor"
                android:textFontWeight="700" />


            <LinearLayout
                android:id="@+id/remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remember me"
                    android:layout_gravity="center"
                    android:fontFamily="@font/urbanist_medium"
                    android:maxLines="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textStyle="bold"
                    android:textColor="?attr/textcolor"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/face_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Face ID"
                    android:layout_gravity="center"
                    android:fontFamily="@font/urbanist_medium"
                    android:maxLines="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textStyle="bold"
                    android:textColor="?attr/textcolor"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/biometric_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biometric ID"
                    android:layout_gravity="center"
                    android:fontFamily="@font/urbanist_medium"
                    android:maxLines="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textStyle="bold"
                    android:textColor="?attr/textcolor"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/google_authenticator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="27dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Authenticator"
                    android:layout_gravity="center"
                    android:fontFamily="@font/urbanist_medium"
                    android:maxLines="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textStyle="bold"
                    android:textColor="?attr/textcolor"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
               >

                <androidx.cardview.widget.CardView
                    android:id="@+id/change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#35383F"
                    app:cardCornerRadius="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Change PIN"
                        android:textColor="?attr/textcolor"
                        android:textFontWeight="700"
                        android:textSize="18dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#35383F"
                    app:cardCornerRadius="45dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Change Password"
                        android:textColor="?attr/textcolor"
                        android:textFontWeight="700"
                        android:textSize="18dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    </LinearLayout>
