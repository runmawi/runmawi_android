<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:orientation="vertical"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                layout_height="?actionBarSize"
                layout_width="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:background="@color/toolbar_color"
                tools:ignore="MissingClass">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_arrow"
                        android:padding="10dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/lets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login to Your Account"
                android:textSize="30dp"
                android:fontFamily="@font/urbanist_bold"
                android:textFontWeight="700"
                android:layout_marginTop="38dp"
                android:layout_gravity="center"
                android:textColor="?attr/textcolor"
                />


            <EditText
                android:id="@+id/emailandphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle10"
                android:fontFamily="@font/urbanist_bold"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:padding="20dp"
                android:shadowRadius="2"
                android:singleLine="true"
                android:textFontWeight="700"
                android:textColor="?attr/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@null"
                android:textSize="15dp"
                android:drawableStart="@drawable/mailvector"
                android:drawablePadding="11dp"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle10"
                android:fontFamily="@font/urbanist_bold"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="20dp"
                android:shadowRadius="2"
                android:singleLine="true"
                android:textFontWeight="700"
                android:textColor="?attr/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@null"
                android:textSize="15dp"
                android:drawableLeft="@drawable/passwordvector"
                android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                android:drawablePadding="11dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginStart="20dp">

                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    app:buttonTint="@color/colorAccent" />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Remember me"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/urbanistregular"
                    android:textFontWeight="700"
                    android:textColor="?attr/textcolor"
                    android:textSize="12dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="17dp"
                    android:fontFamily="@font/urbanist_bold"
                    android:text="Sign in"
                    android:textColor="?attr/textcolor"
                    android:textFontWeight="700"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot the password?"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textFontWeight="700"
                android:textSize="15dp"
                android:visibility="visible"
                />

            <LinearLayout
                android:id="@+id/orContinue_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#363A42" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/urbanist_medium"
                    android:textFontWeight="500"
                    android:gravity="center"
                    android:text="Or continue with"
                    android:textColor="?attr/textcolor"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#363A42" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/facebook_layout"
                    android:layout_width="82dp"
                    android:layout_height="61dp"
                    android:layout_marginEnd="40dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardbackground_color"
                    android:background="@drawable/edittextstyle"
                    android:onClick="onClick"
                    android:visibility="gone">
                    <FrameLayout
                        android:id="@+id/FrameLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittextstyle15">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facebook_icon"
                            android:layout_gravity="center" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/google_layout"
                    android:layout_width="82dp"
                    android:layout_height="61dp"
                    app:cardBackgroundColor="@color/cardbackground_color"
                    android:background="@drawable/edittextstyle"
                    app:cardCornerRadius="15dp"
                    android:visibility="gone"
                    >

                    <FrameLayout
                        android:id="@+id/FrameLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittextstyle15">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/google_icon"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/apple_layout"
                    android:layout_width="82dp"
                    android:layout_height="61dp"
                    app:cardBackgroundColor="@color/ediitextstylecolor"
                    android:layout_marginStart="40dp"
                    app:cardCornerRadius="15dp"
                    android:visibility="gone"
                    >

                    <FrameLayout
                        android:id="@+id/FrameLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittextstyle15">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/apple_icon"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/sitename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_medium"
                    android:textFontWeight="600"
                    android:text="Don’t have an account?"
                    android:textColor="?attr/textcolor"/>

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textFontWeight="600"
                    android:paddingLeft="10dp"
                    android:text=" Sign Up"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
