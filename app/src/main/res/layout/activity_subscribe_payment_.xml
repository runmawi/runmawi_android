<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context="SubscribeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                layout_height="?actionBarSize"
                layout_width="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/toolbar_color"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                tools:ignore="MissingClass"
                android:visibility="gone">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/logo"
                            android:adjustViewBounds="true"
                            android:layout_width="155dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:layout_marginRight="65dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="3.5"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans"
                            android:visibility="gone"
                            android:text="Light Mode"
                            android:textColor="?attr/textcolor"
                            android:textSize="14sp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:visibility="visible"
                            android:id="@+id/switch1"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            />

                    </LinearLayout>

                    <!--
                                        <ImageView
                                            android:layout_weight="3.5"
                                            android:id="@+id/notification"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:visibility="gone"
                                            android:layout_marginEnd="12dp"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/downloadnew" />
                    -->

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profiledp"
                        android:layout_weight="6.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        android:layout_marginEnd="12dp" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:src="@drawable/back_arrow"
                    />

                <TextView
                    android:id="@+id/chooseplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/urbanist_bold"
                    android:text="Subscribe your Plan"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:textFontWeight="700" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="Enjoy Watching Quality Premium Movies and TV Shows at your Ease and Convenience"
                    android:textColor="?attr/textcolor"
                    android:textSize="17sp"
                    android:textFontWeight="400"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/steps"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist_bold"
                    android:gravity="right"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/steps"
                    android:textColor="?attr/textcolor"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/pro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>



            <LinearLayout
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                >


                <LinearLayout
                    android:background="?attr/backgroundColor"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/card_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="?attr/backgroundColor"
                        android:padding="5dp"
                        android:scrollbars="vertical" />
                    <ProgressBar
                        android:id="@+id/plan_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/pay_now"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonbackgroun"
                        android:fontFamily="@font/urbanist_bold"
                        android:gravity="center|center_horizontal"
                        android:text="Pay Now"
                        android:textAllCaps="false"
                        android:textColor="?attr/buttontextcolor"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/proceedtopay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAccent"
                        app:cardCornerRadius="45dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="17dp"
                            android:paddingBottom="16dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="@string/proceedtopay"
                            android:textColor="?attr/textcolor"
                            android:textFontWeight="700"
                            android:textSize="18dp" />
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorAccent"
                        android:fontFamily="@font/urbanist_bold"
                        android:gravity="center|center_horizontal"
                        android:text="@string/proceedtopay"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="19dp"
                        android:visibility="gone"/>

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/urbanist_bold"
                        android:padding="15dp"
                        android:text="Skip"
                        android:textColor="?attr/textcolor"
                        android:textSize="15dp"
                        android:visibility="gone"
                        app:buttonTint="@color/colorAccent" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageeee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/skipp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/skip"
                    android:fontFamily="@font/urbanist_bold"
                    android:textAlignment="center"
                    android:textColor="?attr/textcolor"
                    android:visibility="gone"
                    android:gravity="center_horizontal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/payment1"
                    android:visibility="gone"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>