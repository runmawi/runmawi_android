<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_parent_container"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context="YoutubeVideoHomepageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/frame_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageyoutube"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:src="@color/white"
                android:layout_height="250dp"/>


            <LinearLayout
                android:id="@+id/playerlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/coverimage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bgimg" />
            </LinearLayout>



            <ProgressBar
                android:id="@+id/loading_exoplayer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:id="@+id/ll_download_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">



        <ProgressBar
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/progress_horizontal_percentage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="50"
            android:progressDrawable="@drawable/progress_exo_downloaded" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/hidelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/backgroundColor"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="?attr/backgroundColor"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/videotitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="Sample title"
                            android:textColor="?attr/textcolor"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/videoduration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="Sample title"
                            android:textColor="?attr/textcolor"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="visible"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_margin="5dp"
                                        android:orientation="horizontal"
                                        >

                                        <TextView
                                            android:id="@+id/movieyear"
                                            android:layout_width="145dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="@string/movieyear"
                                            android:textColor="?attr/textcolor"
                                            android:textSize="14sp"
                                            android:visibility="visible" />

                                        <TextView

                                            android:id="@+id/duration"
                                            android:layout_width="match_parent"
                                            android:layout_weight="2"
                                            android:paddingRight="25dp"
                                            android:layout_height="match_parent"
                                            android:visibility="gone"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="2hr 40mins"
                                            android:textColor="?attr/textcolor"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="|"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/genre"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="genre"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="14sp" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_weight="2"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="|"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:layout_margin="5dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/language"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="visible"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="Sample title"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="14sp" />




                            </LinearLayout>
                        </LinearLayout>



                        <Switch
                            android:visibility="gone"
                            android:id="@+id/autoplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto play"
                            android:layout_gravity="right"/>


                      <!--  <com.skyhope.showmoretextview.ShowMoreTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/videotext"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/moviedescription"
                            android:visibility="gone"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="?attr/textcolor"
                            android:textSize="14dp"
                            tools:ignore="MissingClass" />-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_margin="10dp">


                            <LinearLayout
                                android:id="@+id/paynow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:background="@drawable/borderstyle"
                                android:ellipsize="end"
                                android:maxLines="1">

                                <TextView
                                    android:id="@+id/pay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawablePadding="10dp"
                                    android:textColor="?attr/textcolor"
                                    android:text="@string/play"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/play_now"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="5dp"
                                android:background="@drawable/edittextstyle"
                                android:ellipsize="end"
                                android:maxLines="1">

                                <TextView
                                    android:id="@+id/play"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/play"
                                    android:drawablePadding="10dp"

                                    android:textColor="?attr/textcolor"
                                    android:text="@string/play"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_download_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextstyle"
                                android:gravity="center"
                                android:padding="5dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/download"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/downloadimd"
                                    android:drawablePadding="10dp"
                                    android:paddingBottom="5dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:maxLines="1"
                                    android:text="@string/download"
                                    android:textColor="?attr/textcolor"/>


                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/id"
                            android:text="Image"
                            android:visibility="gone"
                            android:textColor="?attr/textcolor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/views"
                            android:text="Image"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:textColor="?attr/textcolor"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <!--
                                    <androidx.recyclerview.widget.RecyclerView
                                         android:id="@+id/videodetail"
                                         android:background="#000000"
                                         android:layout_margin="5dp"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"/>
                -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:id="@+id/userfeatuerlayout"
                    android:background="?attr/backgroundColor"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/likeed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                       >


                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="?attr/like" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Like"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/unlikelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/liked"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/likedvideo"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Like"
                            android:textColor="?attr/textcolor"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/dislikee"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="?attr/dislike" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Dislike"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/undislikelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/dislikeed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="?attr/dislike"
                            android:visibility="visible" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Dislike"
                            android:textColor="?attr/textcolor"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/watchlist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/watchlistimg"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="?attr/wishlist" />

                        <ImageView
                            android:id="@+id/watchlistaddimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/added"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Wishlist"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/watchlater"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/watchlateradd"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:src="?attr/watchlater" />

                        <ImageView
                            android:id="@+id/watchlateraddedimg"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:src="@drawable/watchlateradded"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Watchlater"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="?attr/share"
                            tools:ignore="NestedWeights" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Share"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>


                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_download_state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_download_cloud"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_download_state"
                            android:layout_width="91dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Download"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/favlist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/favlistimg"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:src="?attr/fav" />

                        <ImageView
                            android:id="@+id/favlistaddimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/favadd"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Favorite"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >


                        <ImageView

                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:src="?attr/views" />


                        <TextView
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Views"
                            android:textColor="?attr/textcolor"
                            android:textSize="10dp" />

                    </LinearLayout>




                </LinearLayout>




                <TextView
                    android:text="comments"
                    android:layout_margin="15dp"
                    android:textSize="14dp"
                    android:textColor="?attr/textcolor"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments"/>


                <LinearLayout
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/commentlayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:visibility="visible"
                        android:background="@drawable/edittextstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >



                        <EditText
                            android:layout_weight="0.2"
                            android:id="@+id/commenttext"
                            android:layout_width="match_parent"
                            android:textColor="?attr/textcolor"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:layout_weight="1.8"
                            android:src="@drawable/commentsend"
                            android:id="@+id/sendcomment"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:background="@drawable/edittextstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/usercomments"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:text="Trailer"
                        android:textColor="?attr/textcolor"
                        android:textSize="14dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/videotrailer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="?attr/textcolor"
                        android:text="You may also like this"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/urbanist_bold"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
