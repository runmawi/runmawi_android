<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:text="A Few Other Questions"
            android:textSize="15sp"
            android:textColor="?attr/textcolor"
            android:textStyle="bold"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:buttonTint="?attr/colorAccent"
            android:layout_gravity="top"
            android:id="@+id/termsandcon"
            android:visibility="gone"
            android:text=""
            android:textSize="15sp"
            android:textColor="?attr/textcolor"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Please select your payment method"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="?attr/textcolor"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wes"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/borderstyle">


                <LinearLayout
                    android:id="@+id/razor"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <RadioButton
                        android:id="@+id/radiorazor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:buttonTint="?attr/colorAccent"
                        android:text="Pay Using Cards , UPI"
                        android:textColor="?attr/textcolor"
                        android:textSize="20dp"
                        />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/cardimg" />

            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#848587" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:id="@+id/paypal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/radiopaypal"
            android:text="Pay Using Paypal"
            android:buttonTint="?attr/colorAccent"
            android:textColor="?attr/textcolor"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/cardimg" />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#848587" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:id="@+id/stripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="top"
                    android:id="@+id/radiostripe"
                    android:text="Pay Using international credit and debit Cards"
                    android:buttonTint="?attr/colorAccent"
                    android:textColor="?attr/textcolor"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/cardimg" />

            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#848587" />

            </LinearLayout>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:id="@+id/termsandcons"
                android:layout_margin="25dp"
                android:text="@string/termsandcondition"
                android:textSize="15sp"
                android:visibility="gone"
                android:textColor="?attr/textcolor"
                android:buttonTint="?attr/colorAccent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:background="?attr/colorAccent"
                android:padding="5dp"
                android:text="PROCEED"
                android:textColor="?attr/buttontextcolor" />

            <TextView
                android:id="@+id/pay"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
