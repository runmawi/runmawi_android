<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">
    <TextView
        android:id="@+id/episode_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="10dp"
        android:fontFamily="@font/urbanist_regular"
        android:textColor="?attr/textcolor"
        android:textSize="13dp"
        android:textFontWeight="400"
        />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_home"
            android:layout_width="190dp"
            android:layout_height="130dp"
            app:cardBackgroundColor="?attr/backgroundColor"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            android:background="?attr/backgroundColor"
            app:cardUseCompatPadding="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/image_view_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/favicon"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/tv_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist_bold"
                    android:maxLines="3"
                    android:textColor="?attr/textcolor"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/layout_mov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_movie"
                    android:layout_margin="1dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    android:paddingRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Mission"
                        android:fontFamily="@font/urbanist_bold"
                        android:visibility="visible"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_trailerurl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist_bold"
                        android:maxLines="1"
                        android:textColor="?attr/textcolor"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist_bold"
                        android:maxLines="1"
                        android:textColor="?attr/textcolor"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/series_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist_bold"
                        android:maxLines="1"
                        android:textColor="?attr/textcolor"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</LinearLayout>


