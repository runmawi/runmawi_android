<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
      android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Per View!"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/urbanist_bold"
            android:textFontWeight="700"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy your subscription and watch all contents exclusively !"
            android:textColor="?attr/textcolor"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/urbanist_medium"
            android:textFontWeight="500"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="?attr/backgroundColor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittextstyle10"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/access_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Rent"
                        android:gravity="center"
                        android:textColor="?attr/textcolor"
                        android:textFontWeight="700"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                        app:tint="@color/colorAccent"
                        android:layout_marginEnd="30dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>